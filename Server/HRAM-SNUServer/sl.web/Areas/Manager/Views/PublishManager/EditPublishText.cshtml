@using sl.model
@using sl.extension

@model T_PublishManage
@{
    ViewBag.Title = "编辑发布正文";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}
<form class="validate" method="post" autocomplete="off" action="" enctype="multipart/form-data">
    <table class="msgtable" title="编辑发布正文" style="width:100%;height:100%">
        <tr>
            <th style="width:20%">
                文章标题：
            </th>
            <td>
                @Html.InputFor(m => m.pmTitle,
                    Html.Valid().Required("请输入文章标题")
                             .AsHtmlAttribute(new { style = "width:80%" }))
                </td>
            </tr>
        </table>

        <div style="padding:10px">
            <script id="pmText" name="pmText" type="text/plain">
                @Html.Raw(@Model.pmText)
            </script>
        </div>


    </form>

    <script type="text/javascript">
        var ue = UE.getEditor('pmText', {
            initialFrameWidth: '100%',
            initialFrameHeight: 360
        });
    </script>