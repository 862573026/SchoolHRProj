@using sl.model
@using sl.extension

@model T_PublishManage
@{
    ViewBag.Title = "编辑发布信息";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}
<form class="validate" method="post" autocomplete="off" action="" enctype="multipart/form-data">

        <table class="msgtable" title="编辑发布信息" style="width:100%;height:100%">
            <tr>
                <th>
                    发布者：
                </th>
                <td>
                    @Html.InputFor(m => m.U_LoginName)
                </td>
                <th>
                    发布类型：
                </th>
                <td>
                    @Html.DropDownListFor(m => m.PM_TypeID, UtilsBind.PublishTypes())
                </td>
            </tr>

            <tr>
                <th>
                    是否置顶：
                </th>
                <td>
                    @Html.DropDownListFor(m => m.PM_Preview, UtilsBind.ChooseYesOrNo())
                </td>
            </tr>
        </table>
</form>
