@using sl.model
@using sl.extension


@model T_FriendlyLink
@{
    ViewBag.Title = "编辑友情链接";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}
<form class="validate" method="post" autocomplete="off" action="" enctype="multipart/form-data">
    <table class="msgtable" title="编辑友情链接" style="width:100%;height:100%">
        <tr>
            <th>
                添加者：
            </th>
            <td>
                @if (Model.pkId == null)
                {
                    @Html.Label("暂无")
                }
                else
                {
                    @Html.DisplayFor(m => m.uLoginName)
                }
            </td>
        </tr>
        <tr>
            <th style="width: 130px">
                链接名称：
            </th>
            <td>
                @Html.InputFor(m => m.flName, 
                Html.Valid().Required("请输入链接名称！")
                .AsHtmlAttribute())
            </td>
        </tr>

        <tr>
            <th style="width: 130px">
                链接类型：
            </th>
            <td>
                @Html.DropDownListFor(m => m.flTypeID, UtilsBind.FLTypes())
            </td>
        </tr>

        <tr>
            <th style="width: 130px">
                链接地址：
            </th>
            <td>
                @Html.InputFor(m => m.flURL, 
                Html.Valid().Required("请输入链接地址！")
                .Url()
                .AsHtmlAttribute())
            </td>
        </tr>

        <tr>
            <th style="width: 130px">
                链接图片地址：
            </th>
            <td>
                @Html.InputFor(m => m.flImgURL, 
                Html.Valid().Required("请输入链接图片地址！")
                .Url()
                .AsHtmlAttribute())
            </td>
        </tr>

        <tr>
            <th style="width: 130px">
                添加时间：
            </th>
            <td>
                @if (Model.pkId == null)
                {
                    @Html.Label("暂无")
                }
                else
                {
                    @Html.DisplayFor(m => m.flAddTime)
                }
                @*@Html.EasyUiDateTimeBoxFor(m => m.flAddTime)*@
            </td>
        </tr>

    </table>
</form>
