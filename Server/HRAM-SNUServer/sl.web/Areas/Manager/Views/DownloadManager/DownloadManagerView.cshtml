@using sl.extension
@{
    ViewBag.Title = "下载管理";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div id="toolbar">
    <fieldset>
        <legend>信息查询</legend>
        <form id="searchForm" action="GetDownloadList" method="post">
            <table>
                <tr>
                    <td>
                        文件标题：
                    </td>
                    <td>
                        @Html.Input("dmTitle")
                    </td>
                    <td>
                        @Html.EasyuiLinkButtonForSearch("download_dg", "searchForm")
                    </td>
                </tr>
            </table>
        </form>
    </fieldset>

    <table>
        <tr>
            <td>
                @Html.EasyuiLinkButtonForAdd("download_dg", "添加链接", Url.Action("DownloadEdit"), 700, 400)
            </td>
            <td>
                <div class="datagrid-btn-separator">
                </div>
            </td>
            <td>
                @Html.EasyuiLinkButtonForEdit("download_dg", "修改链接", Url.Action("DownloadEdit"), 700, 400)
            </td>
            <td>
                <div class="datagrid-btn-separator">
                </div>
            </td>
            <td>
                @Html.EasyuiLinkButtonForDel("download_dg", Url.Action("DownloadDel"))
            </td>
            <td>
                <div class="datagrid-btn-separator">
                </div>
            </td>
            <td>
                @Html.EasyuiLinkButtonForReload("download_dg")
            </td>

        </tr>
    </table>
</div>
<table id="download_dg"></table>


<script type="text/javascript">
    var url = '@Url.Action("GetDownloadList")';
    var columns = [[
                    { field: 'uLoginName', title: '登录名', width: '10%', sortable: true },
                    { field: 'dmTitle', title: '文件标题', width: '20%', sortable: true },
                    { field: 'dmTypeValue', title: '下载类型', width: '10%', sortable: true },
                    { field: 'dmFileURL', title: '文件路径', width: '30%' },
                    { field: 'dmDownloadNum', title: '下载数量', width: '5%', sortable: true },
                    { field: 'dmUploadTime', title: '上传时间', width: '10%', sortable: true }

    ]];
    initGrid("download_dg", url, "pkId", "T_DownloadManage.pkId", columns, true, false);
</script>


