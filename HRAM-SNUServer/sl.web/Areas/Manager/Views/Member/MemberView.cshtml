@using sl.extension
@{
    ViewBag.Title = "会员管理";
    Layout = "~/Areas/Manager/Views/Shared/ManagerLayout.cshtml";
}

<div id="toolbar">
    <fieldset>
        <legend>信息查询</legend>
        <form id="searchForm" action="GetMembersList" method="post">
            <table>
                <tr>
                    <td>
                        登录名：
                    </td>
                    <td>
                        @Html.Input("u_loginname")
                    </td>
                    <td>
                        @Html.EasyuiLinkButtonForSearch("member_dg", "searchForm")
                    </td>
                </tr>
            </table>
        </form>
    </fieldset>
    <table>
        <tr>
            <td>
                @Html.EasyuiLinkButtonForAdd("member_dg", "添加会员", Url.Action("MemberEdit"), 900, 600)
            </td>
            <td>
                <div class="datagrid-btn-separator">
                </div>
            </td>
            <td>
                @Html.EasyuiLinkButtonForEdit("member_dg", "修改会员", Url.Action("MemberEdit"), 900, 600)
            </td>
            <td>
                <div class="datagrid-btn-separator">
                </div>
            </td>
            <td>
                @Html.EasyuiLinkButtonForDel("member_dg", Url.Action("MembersDel"))
            </td>
            <td>
                <div class="datagrid-btn-separator">
                </div>
            </td>
            <td>
                @Html.EasyuiLinkButtonForReload("member_dg")
            </td>
        </tr>
    </table>
</div>
<table id="member_dg"></table>

<script type="text/javascript">
    var url = '@Url.Action("GetMembersList")';
    var columns = [[
                    { field: 'u_loginname', title: '登录名', width: '10%', sortable: true },
                    { field: 'm_reviewresultid', title: '类型ID', width: '10%', sortable: true },
                    { field: 'm_applytime', title: '密码', width: '20%' },
                    { field: 'm_name', title: '用户名', width: '12%', sortable: true },
                    { field: 'm_typeid', title: '联系电话', width: '20%', sortable: true },
                    { field: 'm_organizationcode', title: '组织代码', width: '25%', sortable: true },
                    { field: 'm_address', title: '地址', width: '25%', sortable: true },
                    { field: 'm_corporatename', title: '法人代表', width: '25%', sortable: true },
                    { field: 'm_idcardno', title: '身份证号码', width: '25%', sortable: true },
                    { field: 'm_contacts', title: '联系人', width: '25%', sortable: true },
                    { field: 'm_contactsphone', title: '联系方式', width: '25%', sortable: true },
                    { field: 'm_summary', title: '摘要', width: '25%', sortable: true },
                    { field: 'm_imgurl', title: '图片地址', width: '25%', sortable: true },
                    { field: 'm_url', title: '地址', width: '25%', sortable: true }
    ]];
    initGrid("member_dg", url, "pk_id", "pk_id", columns, true, false);
</script>

