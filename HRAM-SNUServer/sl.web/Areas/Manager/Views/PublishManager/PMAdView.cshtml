@using sl.extension
@{
    ViewBag.Title = "发布管理";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div id="toolbar">
    <fieldset>
        <legend>信息查询</legend>
        <form id="searchForm" action="GetMembersList" method="post">
            <table>
                <tr>
                    <td>
                        发布者：
                    </td>
                    <td>
                        @Html.Input("pm_adimglistid")
                    </td>
                    <td>
                        @Html.EasyuiLinkButtonForSearch("pm_ad_dg", "searchForm")
                    </td>
                </tr>
            </table>
        </form>
    </fieldset>
    <table>
        <tr>
            <td>
                @Html.EasyuiLinkButtonForAdd("pm_ad_dg", "加入广告图片", Url.Action("PMAdEdit", new { aid = Request["aid"] }), 900, 600)
            </td>
            <td>
                <div class="datagrid-btn-separator">
                </div>
            </td>
            <td>
                @Html.EasyuiLinkButtonForEdit("pm_ad_dg", "编辑广告图片", Url.Action("PMAdEdit"), 900, 600)
            </td>
            <td>
                <div class="datagrid-btn-separator">
                </div>
            </td>
            <td>
                @Html.EasyuiLinkButtonForDel("pm_ad_dg", Url.Action("PMAdDel"))
            </td>
            <td>
                <div class="datagrid-btn-separator">
                </div>
            </td>
            <td>
                @Html.EasyuiLinkButtonForReload("pm_ad_dg")
            </td>
        </tr>
    </table>
</div>
<table id="pm_ad_dg"></table>

<script type="text/javascript">
    var url = '@Url.Action("GetJsonPMAdImgs", new { aid = Request["aid"] })';

    var columns = [[
                    { field: 'pm_title', title: '文章标题', width: '10%', sortable: true },
                    { field: 'pm_adimglisturl', title: '链接', width: '10%', sortable: true },
                    { field: 'pm_adimglistnum', title: '序号', width: '20%', sortable: true }
    ]];
    initGrid("pm_ad_dg", url, "pk_id", "T_ADImgList.pk_id", columns, true, false);
</script>